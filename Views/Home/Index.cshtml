<style>
    :root {
        --primary-color: #2c8c99; /* Teal Blue - Air Conditioning Theme */
        --secondary-color: #4a6572; /* Slate Gray */
        --accent-color: #ff7e5f; /* Coral Accent */
        --light-color: #f0f7f9; /* Ice Blue Light */
        --dark-color: #1a535c; /* Deep Teal */
        --success-color: #28a745; /* Green */
        --warning-color: #ffc107; /* Yellow */
        --info-color: #17a2b8; /* Cyan */
        --purple: #6f42c1; /* Purple */
    }

    .bg-gradient-primary {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--dark-color) 100%);
    }

    /* Primary Color Overrides */
    .text-primary {
        color: var(--primary-color) !important;
    }

    .bg-primary {
        background-color: var(--primary-color) !important;
    }

    .btn-primary {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
        color: white;
    }

        .btn-primary:hover {
            background-color: var(--dark-color);
            border-color: var(--dark-color);
        }

    .btn-outline-primary {
        color: var(--primary-color);
        border-color: var(--primary-color);
    }

        .btn-outline-primary:hover {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
            color: white;
        }

    /* Light Background */
    .bg-light {
        background-color: var(--light-color) !important;
    }

    /* Card hover effect with primary color border */
    .hover-shadow:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(44, 140, 153, 0.1) !important;
        border-top: 3px solid var(--primary-color);
    }

    /* Stats cards background with primary tint */
    .bg-primary-opacity-10 {
        background-color: rgba(44, 140, 153, 0.1) !important;
    }

    /* Custom accent colors */
    .text-accent {
        color: var(--accent-color) !important;
    }

    .bg-accent {
        background-color: var(--accent-color) !important;
    }
</style>

