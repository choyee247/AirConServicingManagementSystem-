    <style>
        :root {
            --primary-color: #2c8c99;
            --primary-light: #3ba6b5;
            --primary-dark: #1e737e;
            --sidebar-width: 260px;
            --sidebar-collapsed: 70px;
            --header-height: 70px;
            --transition-speed: 0.3s;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            min-height: 100vh;
            background-color: #f8fafc;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            overflow-x: hidden;
            transition: all var(--transition-speed) ease;
        }

        /* Sidebar Styling */
        .sidebar {
            width: var(--sidebar-width);
            background: linear-gradient(180deg, var(--primary-color) 0%, var(--primary-dark) 100%);
            min-height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            z-index: 100;
            box-shadow: 3px 0 15px rgba(0, 0, 0, 0.08);
            transition: all var(--transition-speed) ease;
            overflow-x: hidden;
            overflow-y: auto;
            height: 100vh;
        }

        /* Sidebar collapsed state */
        body.sidebar-collapsed .sidebar {
            width: var(--sidebar-collapsed);
        }

        .sidebar:hover {
            box-shadow: 3px 0 20px rgba(0, 0, 0, 0.12);
        }

        .sidebar .brand {
            padding: 25px 20px;
            font-size: 22px;
            color: #fff;
            font-weight: 700;
            text-align: center;
            border-bottom: 1px solid rgba(255, 255, 255, 0.15);
            display: flex;
            align-items: center;
            justify-content: space-between;
            background-color: rgba(255, 255, 255, 0.05);
            position: sticky;
            top: 0;
            z-index: 10;
            min-height: 80px;
        }

        .brand-content {
            display: flex;
            align-items: center;
            gap: 12px;
            overflow: hidden;
            white-space: nowrap;
            transition: all var(--transition-speed) ease;
        }

        body.sidebar-collapsed .brand-content {
            justify-content: center;
        }

        .sidebar .brand i {
            font-size: 26px;
            color: #e3f7fa;
            min-width: 30px;
        }

        .brand-text {
            overflow: hidden;
            transition: all var(--transition-speed) ease;
        }

        body.sidebar-collapsed .brand-text {
            opacity: 0;
            width: 0;
            display: none;
        }

        /* Toggle button in sidebar */
        .toggle-btn {
            background: rgba(255, 255, 255, 0.1);
            border: none;
            color: white;
            width: 32px;
            height: 32px;
            border-radius: 6px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.2s ease;
            font-size: 16px;
            flex-shrink: 0;
        }

            .toggle-btn:hover {
                background: rgba(255, 255, 255, 0.2);
                transform: scale(1.05);
            }

        body.sidebar-collapsed .toggle-btn {
            margin: 0 auto;
        }

            body.sidebar-collapsed .toggle-btn i {
                transform: rotate(180deg);
            }

        .sidebar a {
            color: #e6f7f9;
            padding: 15px 20px;
            display: flex;
            align-items: center;
            text-decoration: none;
            font-size: 15px;
            font-weight: 500;
            transition: all var(--transition-speed) ease;
            border-left: 4px solid transparent;
            gap: 12px;
            white-space: nowrap;
        }

            .sidebar a i {
                width: 20px;
                text-align: center;
                font-size: 18px;
                flex-shrink: 0;
            }

        .link-text {
            overflow: hidden;
            transition: all var(--transition-speed) ease;
        }

        body.sidebar-collapsed .link-text {
            opacity: 0;
            width: 0;
            display: none;
        }

        body.sidebar-collapsed .sidebar a {
            justify-content: center;
            padding: 15px 10px;
        }

        .sidebar a:hover {
            background-color: rgba(255, 255, 255, 0.12);
            border-left: 4px solid #a8e6f0;
            color: #ffffff;
        }

        body.sidebar-collapsed .sidebar a:hover {
            border-left: 4px solid transparent;
            border-radius: 8px;
            background-color: rgba(255, 255, 255, 0.15);
        }

        .sidebar .active {
            background-color: rgba(255, 255, 255, 0.1);
            border-left: 4px solid #ffffff;
            color: #ffffff;
            font-weight: 600;
        }

        body.sidebar-collapsed .sidebar .active {
            border-left: 4px solid transparent;
            border-radius: 8px;
        }

        .menu-header {
            padding: 18px 20px 10px;
            font-size: 12px;
            color: #b3ebf2;
            text-transform: uppercase;
            letter-spacing: 1px;
            font-weight: 600;
            margin-top: 5px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            overflow: hidden;
            white-space: nowrap;
            transition: all var(--transition-speed) ease;
        }

        body.sidebar-collapsed .menu-header {
            padding: 18px 10px 10px;
            text-align: center;
            opacity: 0;
            height: 0;
            padding: 0;
            margin: 0;
            border: none;
        }

            body.sidebar-collapsed .menu-header span {
                display: none;
            }

        /* Tooltip for collapsed state */
        .sidebar a .tooltip {
            display: none;
            position: absolute;
            left: 100%;
            top: 50%;
            transform: translateY(-50%);
            background: var(--primary-dark);
            color: white;
            padding: 8px 12px;
            border-radius: 6px;
            font-size: 14px;
            white-space: nowrap;
            z-index: 1000;
            box-shadow: 2px 2px 10px rgba(0,0,0,0.1);
            margin-left: 10px;
            pointer-events: none;
        }

            .sidebar a .tooltip::before {
                content: '';
                position: absolute;
                left: -6px;
                top: 50%;
                transform: translateY(-50%);
                border-width: 6px 6px 6px 0;
                border-style: solid;
                border-color: transparent var(--primary-dark) transparent transparent;
            }

        body.sidebar-collapsed .sidebar a:hover .tooltip {
            display: block;
        }

        /* Sidebar content wrapper */
        .sidebar-content {
            padding-bottom: 20px;
        }

        /* Header Styling */
        .main-header {
            height: var(--header-height);
            background-color: #ffffff;
            position: fixed;
            top: 0;
            left: var(--sidebar-width);
            right: 0;
            z-index: 99;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 30px;
            box-shadow: 0 3px 15px rgba(0, 0, 0, 0.05);
            border-bottom: 1px solid #eaeef2;
            transition: all var(--transition-speed) ease;
        }

        body.sidebar-collapsed .main-header {
            left: var(--sidebar-collapsed);
        }

        /* Header Menu Toggle Button */
        .header-toggle {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .toggle-icon-btn {
            background: none;
            border: none;
            font-size: 22px;
            color: var(--primary-color);
            cursor: pointer;
            width: 40px;
            height: 40px;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
        }

            .toggle-icon-btn:hover {
                background-color: #f1f5f9;
                color: var(--primary-dark);
                transform: scale(1.05);
            }

        .header-left h1 {
            font-size: 22px;
            color: #2d3748;
            font-weight: 600;
            margin: 0;
        }

        .header-right {
            display: flex;
            align-items: center;
            gap: 25px;
        }

        .date-display {
            display: flex;
            align-items: center;
            gap: 10px;
            background-color: #f1f7f9;
            padding: 8px 16px;
            border-radius: 50px;
            color: #2c8c99;
            font-weight: 500;
            border: 1px solid #e0eff2;
            transition: all var(--transition-speed) ease;
        }

            .date-display i {
                font-size: 18px;
            }

        .notification {
            position: relative;
        }

        .notification-btn {
            background: none;
            border: none;
            font-size: 20px;
            color: #64748b;
            position: relative;
            width: 45px;
            height: 45px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.2s ease;
            cursor: pointer;
        }

            .notification-btn:hover {
                background-color: #f1f5f9;
                color: var(--primary-color);
            }

        .notification-badge {
            position: absolute;
            top: 5px;
            right: 5px;
            background-color: #ef4444;
            color: white;
            font-size: 11px;
            width: 18px;
            height: 18px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
        }

        .user-profile {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 8px 16px;
            border-radius: 50px;
            background-color: #f8fafc;
            cursor: pointer;
            transition: all 0.2s ease;
        }

            .user-profile:hover {
                background-color: #f1f5f9;
            }

        .user-avatar {
            width: 38px;
            height: 38px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--primary-color), #3ba6b5);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 600;
            font-size: 16px;
        }

        .user-name {
            font-weight: 600;
            color: #334155;
            font-size: 15px;
        }

        .user-role {
            font-size: 12px;
            color: #64748b;
        }

        /* Content Area */
        .content {
            margin-left: var(--sidebar-width);
            margin-top: var(--header-height);
            padding: 30px;
            min-height: calc(100vh - var(--header-height));
            transition: all var(--transition-speed) ease;
        }

        body.sidebar-collapsed .content {
            margin-left: var(--sidebar-collapsed);
        }

        .content-card {
            background-color: #ffffff;
            border-radius: 12px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.04);
            border: 1px solid #eef2f7;
            padding: 25px;
            margin-bottom: 25px;
        }

        /* Responsive */
        @@media (max-width: 992px) {
            .sidebar

        {
            width: var(--sidebar-width);
            transform: translateX(-100%);
        }

        .sidebar.show {
            transform: translateX(0);
        }

        body.sidebar-collapsed .sidebar {
            width: var(--sidebar-width);
            transform: translateX(-100%);
        }

            body.sidebar-collapsed .sidebar.show {
                transform: translateX(0);
            }

        .main-header {
            left: 0;
        }

        body.sidebar-collapsed .main-header {
            left: 0;
        }

        .content {
            margin-left: 0;
        }

        body.sidebar-collapsed .content {
            margin-left: 0;
        }

        .toggle-btn {
            display: none;
        }

        }

        @@media (min-width: 993px) {
            .mobile-only

        {
            display: none !important;
        }

        }

        /* Ensure all sidebar items are visible */
        .sidebar {
            display: flex;
            flex-direction: column;
        }

        .sidebar-content {
            flex: 1;
            overflow-y: auto;
        }

        /* Scrollbar styling */
        .sidebar::-webkit-scrollbar {
            width: 5px;
        }

        .sidebar::-webkit-scrollbar-track {
            background: rgba(255, 255, 255, 0.1);
        }

        .sidebar::-webkit-scrollbar-thumb {
            background: rgba(255, 255, 255, 0.3);
            border-radius: 10px;
        }

            .sidebar::-webkit-scrollbar-thumb:hover {
                background: rgba(255, 255, 255, 0.4);
            }
    </style>
    @RenderSection("Styles", required: false)
</head>
@{
