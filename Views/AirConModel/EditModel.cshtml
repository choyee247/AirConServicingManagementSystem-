@model AirConServicingManagementSystem.Models.AirConModel
@{
    ViewData["Title"] = "Edit Model";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Edit Model</h3>

<form asp-action="EditModel" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Brand</label>
        <select asp-for="BrandId" class="form-select">
            @foreach (var brand in ViewBag.Brands)
            {
                <option value="@brand.Id">@brand.BrandName</option>
                //<option value="@brand.Id" @(brand.Id == Model.BrandId ? "selected" : "")>@brand.BrandName</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="ModelName" class="form-label"></label>
        <input asp-for="ModelName" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Hp" class="form-label"></label>
        <input asp-for="Hp" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Models" class="btn btn-secondary">Cancel</a>
</form>
