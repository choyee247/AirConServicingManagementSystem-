@model IEnumerable<AirConServicingManagementSystem.Models.AirConModel>
@{
    ViewData["Title"] = "Aircon Models";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<a asp-action="CreateModel" class="btn btn-success mb-3"><i class="fas fa-plus"></i> Add Model</a>

<table class="table table-bordered table-hover">
    <thead class="table-light">
        <tr>
            <th>ID</th>
            <th>Brand</th>
            <th>Model Name</th>
            <th>HP</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Brand.BrandName</td>
                <td>@item.ModelName</td>
                <td>@item.Hp</td>
                <td>
                    <a asp-action="EditModel" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="DeleteModel" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
