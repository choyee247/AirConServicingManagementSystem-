@model AirConServicingManagementSystem.Models.ServiceTechnician

@{
    ViewData["Title"] = "Technician Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="technician-details-container">
    <div class="details-header">
        <div class="header-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                <circle cx="9" cy="7" r="4"></circle>
                <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
            </svg>
        </div>
        <div class="header-content">
            <h1 class="details-title">Technician Details</h1>
            <p class="details-subtitle">Complete information for @Model.Name</p>
        </div>
        <div class="header-actions">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn-edit">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                    <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                </svg>
                Edit
            </a>
        </div>
    </div>

    <div class="details-card">
        <div class="technician-profile">
            <div class="profile-avatar">
                <span>@Model.Name.Substring(0, 1).ToUpper()</span>
            </div>
            <div class="profile-info">
                <h2 class="technician-name">@Model.Name</h2>
                <div class="status-badge @(Model.IsActive == true ? "active" : "inactive")">
                    @(Model.IsActive == true ? "Active" : "Inactive")
                </div>
                <div class="technician-contact">
                    @if (!string.IsNullOrEmpty(Model.Phone))
                    {
                        <span class="contact-item">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
                            </svg>
                            @Model.Phone
                        </span>
                    }

                    @if (!string.IsNullOrEmpty(Model.Email))
                    {
                        <span class="contact-item">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                                <polyline points="22,6 12,13 2,6"></polyline>
                            </svg>
                            @Model.Email
                        </span>
                    }
                </div>
            </div>
        </div>

        <div class="details-grid">
            <div class="detail-section">
                <h3 class="section-title">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                        <circle cx="12" cy="10" r="3"></circle>
                    </svg>
                    Address Information
                </h3>
                <div class="detail-item">
                    <div class="detail-label">Address</div>
                    <div class="detail-value">
                        @if (!string.IsNullOrEmpty(Model.Address))
                        {
                            @Model.Address
                        }
                        else
                        {
                            <span class="text-muted">Not provided</span>
                        }
                    </div>
                </div>
            </div>

            <div class="detail-section">
                <h3 class="section-title">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                        <line x1="16" y1="2" x2="16" y2="6"></line>
                        <line x1="8" y1="2" x2="8" y2="6"></line>
                        <line x1="3" y1="10" x2="21" y2="10"></line>
                    </svg>
                    Employment Information
                </h3>
                <div class="detail-item">
                    <div class="detail-label">Technician ID</div>
                    <div class="detail-value">@Model.Id</div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">Join Date</div>
                    <div class="detail-value">
                        @if (Model.JoinDate.HasValue)
                        {
                            @Model.JoinDate.Value.ToString("dd MMMM yyyy")
                            <div class="text-muted">
                                @((DateTime.Now - Model.JoinDate.Value).Days) days ago
                            </div>
                        }
                        else
                        {
                            <span class="text-muted">Not set</span>
                        }
                    </div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">Created At</div>
                    <div class="detail-value">
                        @Model.CreatedAt?.ToString("dd MMMM yyyy HH:mm")
                    </div>
                </div>
                @if (Model.UpdatedAt != null)
                {
                    <div class="detail-item">
                        <div class="detail-label">Last Updated</div>
                        <div class="detail-value">
                            @Model.UpdatedAt.Value.ToString("dd MMMM yyyy HH:mm")
                        </div>
                    </div>
                }
            </div>

            <div class="detail-section">
                <h3 class="section-title">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                        <polyline points="22 4 12 14.01 9 11.01"></polyline>
                    </svg>
                    Statistics
                </h3>
                <div class="stats-grid">
                    <div class="stat-card">
                        <div class="stat-value">@Model.ServiceRecords?.Count()</div>
                        <div class="stat-label">Service Records</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-value">@Model.TechnicianBonuses?.Count()</div>
                        <div class="stat-label">Bonuses</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-value">0</div>
                        <div class="stat-label">Avg Rating</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="action-buttons">
            <a asp-action="Index" class="btn-back">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="19" y1="12" x2="5" y2="12"></line>
                    <polyline points="12 19 5 12 12 5"></polyline>
                </svg>
                Back to Technicians
            </a>
            <div class="action-group">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn-edit-action">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                        <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                    </svg>
                    Edit Technician
                </a>
                <button class="btn-delete" onclick="confirmDelete(@Model.Id)">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <polyline points="3 6 5 6 21 6"></polyline>
                        <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                    </svg>
                    Delete
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    /* Reuse styles from Customer Details view, modified for Technicians */
    :root {
        --primary: #2c8c99;
        --primary-dark: #23727d;
        --primary-light: #e6f4f6;
        --border: #e0f0f3;
        --bg: #f8fafb;
        --text: #333;
        --text-light: #666;
        --danger: #dc3545;
        --success: #28a745;
    }

    .technician-details-container {
        max-width: 900px;
        margin: 0 auto;
    }

    .details-header {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-bottom: 25px;
        padding-bottom: 20px;
        border-bottom: 2px solid var(--border);
    }

    .header-icon {
        width: 50px;
        height: 50px;
        background: linear-gradient(135deg, var(--primary), var(--primary-dark));
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
    }

    .header-content {
        flex: 1;
    }

    .details-title {
        font-size: 1.8rem;
        font-weight: 700;
        color: var(--primary);
        margin: 0 0 5px 0;
    }

    .details-subtitle {
        font-size: 0.95rem;
        color: var(--text-light);
        margin: 0;
    }

    .header-actions {
        display: flex;
        gap: 10px;
    }

    .btn-edit {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 10px 20px;
        background: var(--primary);
        color: white;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-edit:hover {
            background: var(--primary-dark);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(44, 140, 153, 0.2);
        }

    .details-card {
        background: white;
        border-radius: 16px;
        padding: 30px;
        border: 1px solid var(--border);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
    }

    .technician-profile {
        display: flex;
        align-items: center;
        gap: 20px;
        margin-bottom: 30px;
        padding-bottom: 25px;
        border-bottom: 2px solid var(--border);
    }

    .profile-avatar {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, var(--primary), var(--primary-dark));
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 2rem;
        font-weight: bold;
    }

    .profile-info {
        flex: 1;
    }

    .technician-name {
        font-size: 1.8rem;
        font-weight: 700;
        color: var(--text);
        margin: 0 0 10px 0;
    }

    .status-badge {
        display: inline-block;
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 10px;
    }

        .status-badge.active {
            background: #d4edda;
            color: #155724;
        }

        .status-badge.inactive {
            background: #f8d7da;
            color: #721c24;
        }

    .technician-contact {
        display: flex;
        gap: 20px;
        flex-wrap: wrap;
    }

    .contact-item {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        color: var(--text-light);
        font-size: 0.95rem;
    }

        .contact-item svg {
            color: var(--primary);
        }

    .details-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 25px;
        margin-bottom: 30px;
    }

    .detail-section {
        background: var(--bg);
        border-radius: 12px;
        padding: 20px;
        border: 1px solid var(--border);
    }

    .section-title {
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 1.1rem;
        font-weight: 600;
        color: var(--primary);
        margin: 0 0 15px 0;
        padding-bottom: 10px;
        border-bottom: 1px solid var(--border);
    }

    .detail-item {
        margin-bottom: 15px;
    }

        .detail-item:last-child {
            margin-bottom: 0;
        }

    .detail-label {
        font-size: 0.85rem;
        font-weight: 600;
        color: var(--text-light);
        margin-bottom: 5px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .detail-value {
        font-size: 1rem;
        color: var(--text);
        line-height: 1.5;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 10px;
    }

    .stat-card {
        background: white;
        border-radius: 8px;
        padding: 15px;
        text-align: center;
        border: 1px solid var(--border);
    }

    .stat-value {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--primary);
        margin-bottom: 5px;
    }

    .stat-label {
        font-size: 0.8rem;
        color: var(--text-light);
    }

    .action-buttons {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 25px;
        border-top: 2px solid var(--border);
    }

    .btn-back {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 12px 24px;
        background: #f8f9fa;
        color: var(--text);
        border: 2px solid var(--border);
        border-radius: 8px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-back:hover {
            background: #e9ecef;
            border-color: var(--primary);
            color: var(--primary);
            transform: translateY(-2px);
        }

    .action-group {
        display: flex;
        gap: 10px;
    }

    .btn-edit-action {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 12px 24px;
        background: var(--primary);
        color: white;
        border: none;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-edit-action:hover {
            background: var(--primary-dark);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(44, 140, 153, 0.2);
        }

    .btn-delete {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 12px 24px;
        background: var(--danger);
        color: white;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .btn-delete:hover {
            background: #c82333;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(220, 53, 69, 0.2);
        }

    .text-muted {
        color: #999;
        font-style: italic;
        font-size: 0.9rem;
    }

    @@media (max-width: 768px) {
        .details-header {
            flex-direction: column;
            text-align: center;
            gap: 15px;
        }

        .header-actions {
            width: 100%;
            justify-content: center;
        }

        .technician-profile {
            flex-direction: column;
            text-align: center;
        }

        .technician-contact {
            justify-content: center;
        }

        .details-grid {
            grid-template-columns: 1fr;
        }

        .action-buttons {
            flex-direction: column;
            gap: 15px;
        }

        .action-group {
            width: 100%;
            flex-direction: column;
        }

        .btn-back,
        .btn-edit-action,
        .btn-delete {
            width: 100%;
            justify-content: center;
        }
    }

    @@media (max-width: 480px) {
        .stats-grid {
            grid-template-columns: 1fr;
        }

        .contact-item {
            width: 100%;
            justify-content: center;
        }
    }
</style>

<script>
    function confirmDelete(id) {
        if (confirm('Are you sure you want to delete this technician? This action cannot be undone.')) {
            window.location.href = '@Url.Action("Delete", "Technicians", new { id = "__id__" })'.replace('__id__', id);
        }
    }
</script>