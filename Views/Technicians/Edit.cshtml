@model AirConServicingManagementSystem.Models.TechnicianViewModel

@{
    ViewData["Title"] = "Edit Technician";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var joinDateValue = Model.JoinDate?.ToString("yyyy-MM-dd");
    var createdDate = Model.CreatedAt?.ToString("dd MMM yyyy HH:mm");
}

<div class="edit-technician-container">
    <div class="edit-header">
        <div class="header-icon">
            <svg xmlns="http://www.w3.org2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
            </svg>
        </div>
        <div>
            <h1 class="edit-title">Edit Technician</h1>
            <p class="edit-subtitle">Update details for @Model.Name</p>
        </div>
    </div>

    <div class="edit-card">
        <form asp-action="Edit" method="post" class="edit-form">
            <input type="hidden" asp-for="Id" />
            
            <div class="form-sections">
                <div class="form-section">
                    <h3 class="section-title">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                            <circle cx="12" cy="7" r="4"></circle>
                        </svg>
                        Personal Information
                    </h3>
                    
                    <div class="form-row">
                        <div class="form-group full-width">
                            <label asp-for="Name" class="form-label">
                                Full Name <span class="required">*</span>
                            </label>
                            <div class="input-with-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                    <circle cx="12" cy="7" r="4"></circle>
                                </svg>
                                <input asp-for="Name" class="form-input" placeholder="Enter full name" />
                            </div>
                            <span asp-validation-for="Name" class="validation-error"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label asp-for="Phone" class="form-label">Phone Number</label>
                            <div class="input-with-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
                                </svg>
                                <input asp-for="Phone" class="form-input" placeholder="09-123456789" />
                            </div>
                            <span asp-validation-for="Phone" class="validation-error"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Email" class="form-label">Email Address</label>
                            <div class="input-with-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                                    <polyline points="22,6 12,13 2,6"></polyline>
                                </svg>
                                <input asp-for="Email" class="form-input" placeholder="technician@example.com" />
                            </div>
                            <span asp-validation-for="Email" class="validation-error"></span>
                        </div>
                    </div>
                </div>

                <div class="form-section">
                    <h3 class="section-title">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                            <circle cx="12" cy="10" r="3"></circle>
                        </svg>
                        Address & Details
                    </h3>
                    
                    <div class="form-row">
                        <div class="form-group full-width">
                            <label asp-for="Address" class="form-label">Address</label>
                            <div class="input-with-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                                    <circle cx="12" cy="10" r="3"></circle>
                                </svg>
                                <textarea asp-for="Address" class="form-textarea" placeholder="Enter complete address" rows="3"></textarea>
                            </div>
                            <span asp-validation-for="Address" class="validation-error"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label asp-for="JoinDate" class="form-label">Join Date</label>
                            <div class="input-with-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                                    <line x1="16" y1="2" x2="16" y2="6"></line>
                                    <line x1="8" y1="2" x2="8" y2="6"></line>
                                    <line x1="3" y1="10" x2="21" y2="10"></line>
                                </svg>
                                <input asp-for="JoinDate" type="date" class="form-input" value="@joinDateValue" />
                            </div>
                            <span asp-validation-for="JoinDate" class="validation-error"></span>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Status</label>
                            <div class="checkbox-group">
                                <label class="checkbox-label">
                                    <input asp-for="IsActive" type="checkbox" />
                                    <span class="checkbox-custom"></span>
                                    <span class="checkbox-text">Active Technician</span>
                                </label>
                                <div class="checkbox-help">Uncheck to mark as inactive</div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-section">
                    <h3 class="section-title">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                            <line x1="16" y1="2" x2="16" y2="6"></line>
                            <line x1="8" y1="2" x2="8" y2="6"></line>
                            <line x1="3" y1="10" x2="21" y2="10"></line>
                        </svg>
                        Additional Information
                    </h3>
                    
                    <div class="info-grid">
                        <div class="info-item">
                            <div class="info-label">Technician ID</div>
                            <div class="info-value">@Model.Id</div>
                        </div>
                        <div class="info-item">
                            <div class="info-label">Created</div>
                            <div class="info-value">@createdDate</div>
                        </div>
                        <div class="info-item">
                            <div class="info-label">Last Updated</div>
                            <div class="info-value">@DateTime.Now.ToString("dd MMM yyyy HH:mm")</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-actions">
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn-preview">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                        <circle cx="12" cy="12" r="3"></circle>
                    </svg>
                    Preview
                </a>
                <a asp-action="Index" class="btn-cancel">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <line x1="19" y1="12" x2="5" y2="12"></line>
                        <polyline points="12 19 5 12 12 5"></polyline>
                    </svg>
                    Cancel
                </a>
                <button type="submit" class="btn-submit">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"></path>
                        <polyline points="17 21 17 13 7 13 7 21"></polyline>
                        <polyline points="7 3 7 8 15 8"></polyline>
                    </svg>
                    Save Changes
                </button>
            </div>
        </form>
    </div>
</div>

<style>
    :root {
        --primary: #2c8c99;
        --primary-dark: #23727d;
        --primary-light: #e6f4f6;
        --border: #e0f0f3;
        --bg: #f8fafb;
        --text: #333;
        --text-light: #666;
        --danger: #dc3545;
        --success: #28a745;
    }

    .edit-technician-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
    }

    .edit-header {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-bottom: 30px;
    }

    .header-icon {
        width: 50px;
        height: 50px;
        background: linear-gradient(135deg, var(--primary), var(--primary-dark));
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
    }

    .edit-title {
        font-size: 1.8rem;
        font-weight: 700;
        color: var(--primary);
        margin: 0;
    }

    .edit-subtitle {
        font-size: 0.95rem;
        color: var(--text-light);
        margin: 5px 0 0 0;
    }

    .edit-card {
        background: white;
        border-radius: 16px;
        padding: 30px;
        border: 1px solid var(--border);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
    }

    .form-sections {
        display: flex;
        flex-direction: column;
        gap: 30px;
    }

    .form-section {
        background: var(--bg);
        border-radius: 12px;
        padding: 25px;
        border: 1px solid var(--border);
    }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 15px;
    }

    .info-item {
        background: white;
        border-radius: 8px;
        padding: 15px;
        border: 1px solid var(--border);
    }

    .info-label {
        font-size: 0.8rem;
        font-weight: 600;
        color: var(--text-light);
        margin-bottom: 5px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .info-value {
        font-size: 1rem;
        color: var(--text);
        font-weight: 500;
    }

    .form-actions {
        display: flex;
        justify-content: space-between;
        gap: 15px;
        margin-top: 30px;
        padding-top: 20px;
        border-top: 1px solid var(--border);
    }

    .btn-preview,
    .btn-cancel,
    .btn-submit {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 12px 24px;
        border-radius: 10px;
        font-size: 0.95rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        border: none;
    }

    .btn-preview {
        background: #f8f9fa;
        color: var(--text);
        border: 2px solid var(--border);
    }

    .btn-preview:hover {
        background: #e9ecef;
        border-color: var(--primary);
        color: var(--primary);
        transform: translateY(-2px);
    }

    .btn-cancel {
        background: #f8f9fa;
        color: var(--text);
        border: 2px solid var(--border);
    }

    .btn-cancel:hover {
        background: #e9ecef;
        border-color: #6c757d;
        color: #6c757d;
        transform: translateY(-2px);
    }

    .btn-submit {
        background: linear-gradient(135deg, var(--primary), var(--primary-dark));
        color: white;
    }

    .btn-submit:hover {
        background: linear-gradient(135deg, var(--primary-dark), #1d5d66);
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(44, 140, 153, 0.3);
    }

    .section-title {
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 1.2rem;
        font-weight: 600;
        color: var(--primary);
        margin: 0 0 20px 0;
        padding-bottom: 15px;
        border-bottom: 1px solid var(--border);
    }

    .form-row {
        display: flex;
        gap: 20px;
        margin-bottom: 20px;
    }

    .form-row:last-child {
        margin-bottom: 0;
    }

    .form-group {
        flex: 1;
    }

    .full-width {
        flex: 0 0 100%;
    }

    .form-label {
        display: block;
        font-size: 0.9rem;
        font-weight: 600;
        color: var(--text);
        margin-bottom: 8px;
    }

    .required {
        color: var(--danger);
    }

    .input-with-icon {
        position: relative;
    }

    .input-with-icon svg {
        position: absolute;
        left: 12px;
        top: 50%;
        transform: translateY(-50%);
        color: var(--primary);
    }

    .form-input,
    .form-textarea {
        width: 100%;
        padding: 12px 12px 12px 40px;
        font-size: 0.95rem;
        border-radius: 10px;
        border: 2px solid var(--border);
        background: white;
        transition: all 0.3s ease;
        color: var(--text);
    }

    .form-textarea {
        min-height: 80px;
        resize: vertical;
        padding-top: 12px;
    }

    .form-input:focus,
    .form-textarea:focus {
        outline: none;
        border-color: var(--primary);
        box-shadow: 0 0 0 3px rgba(44, 140, 153, 0.1);
    }

    .validation-error {
        display: block;
        font-size: 0.8rem;
        color: var(--danger);
        margin-top: 5px;
        min-height: 20px;
    }

    .checkbox-group {
        display: flex;
        flex-direction: column;
        gap: 5px;
    }

    .checkbox-label {
        display: flex;
        align-items: center;
        gap: 10px;
        cursor: pointer;
    }

    .checkbox-custom {
        width: 20px;
        height: 20px;
        border: 2px solid var(--border);
        border-radius: 6px;
        position: relative;
        transition: all 0.3s ease;
    }

    .checkbox-label input {
        display: none;
    }

    .checkbox-label input:checked + .checkbox-custom {
        background: var(--primary);
        border-color: var(--primary);
    }

    .checkbox-label input:checked + .checkbox-custom::after {
        content: '';
        position: absolute;
        left: 6px;
        top: 2px;
        width: 6px;
        height: 10px;
        border: solid white;
        border-width: 0 2px 2px 0;
        transform: rotate(45deg);
    }

    .checkbox-text {
        font-size: 0.95rem;
        color: var(--text);
    }

    .checkbox-help {
        font-size: 0.8rem;
        color: var(--text-light);
        font-style: italic;
    }

    @@media (max-width: 768px) {
        .edit-header {
            flex-direction: column;
            text-align: center;
        }

        .form-row {
            flex-direction: column;
            gap: 15px;
        }

        .form-actions {
            flex-direction: column;
        }

        .btn-preview,
        .btn-cancel,
        .btn-submit {
            width: 100%;
            justify-content: center;
        }

        .info-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}