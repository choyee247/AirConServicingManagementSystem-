@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-4">Admin Dashboard</h2>

<div class="row g-4">
    <div class="col-md-3">
        <div class="card shadow-sm text-center">
            <div class="card-body">
                <i class="fa-solid fa-users fa-2x text-primary mb-2"></i>
                <h5>Total Customers</h5>
                <h3>120</h3>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card shadow-sm text-center">
            <div class="card-body">
                <i class="fa-solid fa-user-gear fa-2x text-success mb-2"></i>
                <h5>Technicians</h5>
                <h3>15</h3>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card shadow-sm text-center">
            <div class="card-body">
                <i class="fa-solid fa-screwdriver-wrench fa-2x text-warning mb-2"></i>
                <h5>Active Services</h5>
                <h3>32</h3>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card shadow-sm text-center">
            <div class="card-body">
                <i class="fa-solid fa-shield-halved fa-2x text-danger mb-2"></i>
                <h5>Warranty Cases</h5>
                <h3>8</h3>
            </div>
        </div>
    </div>
</div>

<hr />

<h4 class="mt-4">System Overview</h4>
<p>
    Welcome to the Air Con Servicing Management System Admin Panel.
    You can manage customers, technicians, services, warranty, reminders,
    and view monthly analytics from this dashboard.
</p>
