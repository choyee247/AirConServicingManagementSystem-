@model IEnumerable<AirConServicingManagementSystem.Models.AirConUnit>
@{
    ViewData["Title"] = "My Aircon Units";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>My Aircon Units</h3>

<a asp-action="AddAircon" class="btn btn-primary mb-3">
    <i class="fas fa-plus"></i> Add New Aircon
</a>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Brand</th>
            <th>Model</th>
            <th>Serial Number</th>
            <th>Capacity (HP)</th>
            <th>Location</th>
            <th>Installation Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            int index = 1;
            foreach (var aircon in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@aircon.Brand.BrandName</td>
                    <td>@aircon.Model.ModelName</td>
                    <td>@aircon.SerialNumber</td>
                    <td>@aircon.CapacityHp</td>
                    <td>@aircon.Location</td>
                    <td>@aircon.InstallationDate?.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a asp-action="EditAircon" asp-route-id="@aircon.Id" class="btn btn-sm btn-warning">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a asp-action="DeleteAircon" asp-route-id="@aircon.Id" class="btn btn-sm btn-danger"
                           onclick="return confirm('Are you sure you want to delete this aircon?');">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
                index++;
            }
        }
        else
        {
            <tr>
                <td colspan="8" class="text-center">No aircon units found.</td>
            </tr>
        }
    </tbody>
</table>
