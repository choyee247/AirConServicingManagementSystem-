@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Admin Login - AirCon Management System</title>

    <!-- FontAwesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet" />

    <style>
        :root {
            --primary: #2c8c99;
            --primary-dark: #1f6f78;
            --bg-light: #f4f9fb;
            --bg-dark: #0f172a;
            --card-dark: #1e293b;
            --text-dark: #e5e7eb;
        }

        body {
            margin: 0;
            height: 100vh;
            background: linear-gradient(135deg, #2c8c99, #3ba6b5);
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', Tahoma;
            transition: 0.3s;
        }

            body.dark {
                background: linear-gradient(135deg, #020617, #0f172a);
            }

        .login-box {
            background: #fff;
            width: 400px;
            padding: 35px;
            border-radius: 14px;
            box-shadow: 0 20px 45px rgba(0,0,0,0.18);
            text-align: center;
            transition: 0.3s;
        }

        body.dark .login-box {
            background: var(--card-dark);
            color: var(--text-dark);
        }

        .icon {
            font-size: 40px;
            color: var(--primary);
            margin-bottom: 10px;
        }

        h3 {
            margin: 10px 0 5px;
            color: var(--primary);
        }

        .sub {
            font-size: 13px;
            margin-bottom: 25px;
            color: #6b7280;
        }

        body.dark .sub {
            color: #94a3b8;
        }

        .input-group {
            position: relative;
            margin-bottom: 18px;
            text-align: left;
        }

        label {
            font-size: 13px;
            font-weight: 600;
        }

        input {
            width: 90%;
            padding: 12px 40px 12px 12px;
            border-radius: 8px;
            border: 1px solid #d1d5db;
            font-size: 14px;
        }

        body.dark input {
            background: #020617;
            border-color: #334155;
            color: var(--text-dark);
        }

        input:focus {
            outline: none;
            border-color: var(--primary);
        }

        .toggle-password {
            position: absolute;
            right: 12px;
            top: 34px;
            cursor: pointer;
            color: #64748b;
        }

        button {
            width: 40%;
            padding: 12px;
            border: none;
            border-radius: 8px;
            background: var(--primary);
            color: #fff;
            font-size: 15px;
            font-weight: 600;
            cursor: pointer;
            margin-top: 10px;
        }

            button:hover {
                background: var(--primary-dark);
            }

        .links {
            margin-top: 15px;
            font-size: 13px;
            display: flex;
            justify-content: space-between;
        }

            .links a {
                color: var(--primary);
                text-decoration: none;
                font-weight: 600;
            }

        .dark-toggle {
            cursor: pointer;
            font-size: 14px;
        }

        .error {
            background: #fee2e2;
            color: #b91c1c;
            padding: 10px;
            margin-top: 15px;
            border-radius: 6px;
            font-size: 14px;
        }

        body.dark .error {
            background: #7f1d1d;
            color: #fecaca;
        }
    </style>
</head>

<body>

    <form method="post" class="login-box">
        <div class="icon">
            <i class="fa-solid fa-snowflake"></i>
        </div>

        <h3>Admin Login</h3>
        <div class="sub">AirCon Management System</div>

        <div class="input-group">
            <label>Username</label>
            <input name="username" required />
        </div>

        <div class="input-group">
            <label>Password</label>
            <input type="password" id="password" name="password" required />
            <i class="fa fa-eye toggle-password" onclick="togglePassword()"></i>
        </div>

        <button type="submit">Sign In</button>

        <div class="links">
            <a asp-action="ForgotPassword">Forgot Password?</a>
            <span class="dark-toggle" onclick="toggleDark()">
                <i class="fa fa-moon"></i> Dark
            </span>
        </div>

        @if (ViewBag.Error != null)
        {
            <div class="error">@ViewBag.Error</div>
        }
    </form>

    <script>
        function togglePassword() {
            const pwd = document.getElementById("password");
            pwd.type = pwd.type === "password" ? "text" : "password";
        }

        function toggleDark() {
            document.body.classList.toggle("dark");
        }
    </script>

</body>
</html>
